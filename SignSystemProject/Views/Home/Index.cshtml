@model SignInResponse;

@{
    Layout = "../Shared/_LayoutSign.cshtml";
}
<h2>Login</h2>
<form method="post">
    <div>
        <i class="fa-regular fa-user-large"></i>
        <input asp-for="Email" placeholder="E-mail">
    </div>
    <div>
        <i class="fa-light fa-lock"></i>
        <input asp-for="Password" placeholder="Senha">
    </div>
</form>